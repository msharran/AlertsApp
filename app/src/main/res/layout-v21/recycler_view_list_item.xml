<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="4dp"
            android:elevation="15dp"
            android:layout_marginTop="2dp"
           android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp" >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:id="@+id/txt_statusBuy"
                        android:text="BUY"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:background="@drawable/left_cornor"


                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:hint="INTRADAY"
                        android:gravity="center"
                        android:textSize="11dp"

                        android:textAlignment="center"
                        android:background="@drawable/right_cornor_orange"
                        android:id="@+id/txt_statusType"

                        android:textColor="@color/white"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tokenName"
                        android:hint="Token"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Buy : "
                            android:textColor="@color/grey_600"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/buy_txt"
                            android:hint="buy"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            />
                    </LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Target : "
                            android:textColor="@color/grey_600"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/target_txt"
                            android:hint="Target"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="S/L : "
                            android:textColor="@color/grey_600"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sl_txt"
                            android:hint="S/L"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            />
                    </LinearLayout>

                </RelativeLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>



</LinearLayout>